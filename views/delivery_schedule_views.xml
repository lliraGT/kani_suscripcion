<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add button to manually calculate next delivery date -->
        <record id="crm_lead_view_form_inherit_delivery" model="ir.ui.view">
            <field name="name">crm.lead.view.form.inherit.delivery</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="calculate_next_delivery_date" string="Calcular próxima fecha de suscripción" type="object" class="btn-info"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>